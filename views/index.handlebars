<!-- Place Container -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="title">Burger Builder!
        
      </h1>
    </div>
    <div class="col-md-12">
      <div class="burgerImage">
        <center>
           <img src="https://img.icons8.com/metro/200/000000/hamburger.png">        
           </center>
      </div>
    </div>
    <div class="col-md-12"> 
      <h6>Click burger list to devour it / Click devoured to undo</h6> 
    </div>
    <div class="col-md-6">
      <h2>Burger List</h2> 
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>



    <div class="col-md-6">
      <h2>Devoured</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>

    <div class="col-md-12">

      <h2>Build Your Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="br">Burger Name:</label>
          <input type="text" id="br" name="burger_name">
        </div>

        <div class="form-group">
          <button type="submit" class="center-block btn btn-default"> Add your Burger<input type="radio" name="devoured" value="0" checked>

          </button>

         
        </div>


      </form>
    </div>
  </div>
</div>
</div>